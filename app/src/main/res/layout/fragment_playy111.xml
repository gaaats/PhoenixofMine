<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bbb"
    android:layout_height="match_parent"
    tools:context=".defrrfgtgtgt.Playy111Fragment">


    <ImageView
        android:id="@+id/gthyhyhfrggtyhyhy"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerInside"
        android:src="@drawable/zz"
        app:layout_constraintBottom_toTopOf="@id/gtkgtjihyjihyjihyhy"
        app:layout_constraintEnd_toEndOf="@id/gojigtjiogtjigt"
        app:layout_constraintStart_toStartOf="@id/grjiogtjiogtjiogtijo"
        app:layout_constraintTop_toTopOf="@id/gtkogtkogtkogtkogt" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/gtkgtjihyjihyjihyhy"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@color/purple_500"
        android:textSize="33sp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:lines="1"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@id/gojigtjiogtjigt"
        app:layout_constraintStart_toStartOf="@id/grjiogtjiogtjiogtijo"
        app:layout_constraintBottom_toTopOf="@id/hykkohkhykhykjoo" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_play_game"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="restart game"
        android:layout_marginTop="32dp"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/gojigtjiogtjigt"
        app:layout_constraintStart_toStartOf="@id/grjiogtjiogtjiogtijo"
        app:layout_constraintTop_toBottomOf="@id/hykkohkhykhykjoo"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/gthyhyhyhyhy"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerInside"
        android:src="@drawable/coin"
        app:layout_constraintBottom_toBottomOf="@id/hkohykohykohyo"
        app:layout_constraintEnd_toEndOf="@id/gojigtjiogtjigt"
        app:layout_constraintStart_toStartOf="@id/grjiogtjiogtjiogtijo"
        app:layout_constraintTop_toBottomOf="@+id/btn_play_game" />




    <TextView
        android:id="@+id/hyjjojhyojhyhy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:fontFamily="@font/opensans_regular"
        android:text="@string/app_name"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hkohykohykohyo" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hkohykohykohyo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/rfjirgtijgtigtij"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/grjiogtjiogtjiogtijo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gojigtjiogtjigt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gtkogtkogtkogtkogt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />


    <ImageView
        android:id="@+id/hykkohkhykhykjoo"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="centerInside"
        android:src="@drawable/tt"
        android:rotation="12"
        app:layout_constraintBottom_toBottomOf="@id/hkohykohykohyo"
        app:layout_constraintEnd_toEndOf="@id/gojigtjiogtjigt"
        app:layout_constraintStart_toStartOf="@id/grjiogtjiogtjiogtijo"
        app:layout_constraintTop_toTopOf="@id/gtkogtkogtkogtkogt" />




</androidx.constraintlayout.widget.ConstraintLayout>